Config {
	commands = [ Run StdinReader 
	, Run Date "%a, %d %b %Y, %H:%M:%S" "date" 10
	, Run Network "enp0s3" ["-t", "<icon=net_up_20.xpm/><rx> Kb/s <icon=net_down_20.xpm/><tx> Kb/s"] 10
	, Run Cpu ["-t", "<icon=cpu_20.xpm/> <total>%", "-H", "50", "--high", "red"] 10
	, Run Memory ["-t", "<icon=memory-icon_20.xpm/> <usedratio>%"] 10
	, Run DiskU [("/", "<icon=harddisk-icon_20.xpm/> <used>")] [] 3600
        , Run BatteryP ["BAT0"] 
                        [ "-t", "<icon=battery_20.xpm/> <left>% <acstatus>",
                        "-L", "10", "-H", "80", "-p", "3",
                        "--", "-O", "(Charging)", "-o", "(Time left: <timeleft>)", "-i", "",
                        "-L", "-15", "-H", "-5", 
                        "-l", "red", "-m", "blue", "-h", "green",
                        "-a", "notify-send -u critical 'Battery running out!!'",
                        "-A", "3"]
                        600
	]
	, iconRoot = "/home/pablo/.config/xmobar/xpm" -- default: "."
	, alignSep = "}{"
	, template = " <icon=haskell_20.xpm/> <fc=#666666>|</fc> %StdinReader% }{ <fc=#779900>%battery%</fc> <fc=#FFB86C>%cpu%</fc> <fc=#FF5555>%memory%</fc> <fc=#82AAFF>%disku%</fc> <fc=#c3e88d>%enp0s3%</fc> <icon=calendar-clock-icon_20.xpm/> <fc=#8BE9FD>%date%</fc>  "
}
