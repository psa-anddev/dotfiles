Config {
        alpha = 255
        , bgColor = "#282a36"
        , fgColor = "#f8f8f2"
        , font = "xft:Hack Nerd Font:pixelsize=14:antialising=true:hinting=true"
        , additionalFonts = [ "xft:Hack Nerd Font:pixelsize=14:antialias=true:hinting=true" ]
	,commands = [ Run StdinReader 
	, Run Date "\xf073  %a, %d %b %Y \xf017 %H:%M:%S" "date" 10
	, Run Cpu ["-t", " \xf109   <total>% ", "-H", "50", "--high", "#ff5555,#f1fa8c"] 10
	, Run Memory ["-t", " \xf233  <usedratio>% "] 10
	, Run DiskU [("/", " \xf0c7 <used> ")] [] 3600
        , Run Battery        [ "--template" , "<acstatus>"
                                , "--Low"      , "15"        -- units: %
                                , "--High"     , "80"        -- units: %
                                , "--low"      , "#ff5555,#44475a"
                                , "--normal"   , "#ffb86c,#44475a"
                                , "--high"     , "#50fa7b,#44475a"

                                , "--" -- battery specific options
                                -- discharging status
                                , "-o"      , " \xf241   <left>% (<timeleft>) "
                                -- AC "on" status
                                , "-O"        , " \xf1e6   <left>% (Charging) "
                                -- charged status
                                , "-i"  , " \xf240  Charged "
                                , "-A", "10"
                                , "-a", "notify-send -u critical 'Battery running out' 'Please, connect the charger before the computer hibernates'"
                                ] 50
        , Run DynNetwork     [ "--template" , " \xf0c2  <dev> \xf01b <tx> kB/s \xf01a <rx> kB/s "
                                , "--Low"      , "1000"       -- units: B/s
                                , "--High"     , "5000"       -- units: B/s
                                , "--low"      , "#50fa7b,#ff79c6"
                                , "--normal"   , "#ffb86c,#ff79c6"
                                , "--high"     , "#ff5555,#ff79c6"
                                ] 10
        , Run Com "/home/pablo/repos/dotfiles/scripts/expressvpn_xmobar" [] "expressvpn" 10
        , Run CommandReader "pymodoro -pp ' ' -bp ' '" "pomodoro"
	]
	, iconRoot = "/home/pablo/.config/xmobar/xpm" -- default: "."
	, alignSep = "}{"
	, template = "   <fc=#44475a>|</fc> %StdinReader% }{ <fc=#f8f8f2,#ff5555>%pomodoro% </fc><fc=#f8f8f2,#ffb86c>   %expressvpn%</fc><fc=#779900>%battery%</fc><fc=#282a36,#f1fa8c>%cpu%</fc><fc=#f8f8f2,#6272a4>%memory%</fc><fc=#f8f8f2,#bd93f9>%disku%</fc><fc=#282a36,#ff79c6>%dynnetwork%</fc><fc=#282a36,#8be9fd> %date%  </fc>"
}
